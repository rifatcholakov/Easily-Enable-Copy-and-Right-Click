{
    "manifest_version": 3,
    "name": "Easily Enable Copy and Right-Click",
    "short_name": "Enable Copy",
    "version": "1.0.0",
    "author": "Rifat Cholakov",
    "homepage_url": "https://github.com/rifatcholakov/Easily-Enable-Copy-and-Right-Click",
    "minimum_chrome_version": "102",
    "offline_enabled": true,
    "description": "This extension force-enables right-click, text selection, and copying on websites that try to block these basic features.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Easily Enable Copy and Right-Click",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.jsx"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "match_about_blank": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/services/bypassEngine.js"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "match_about_blank": true,
            "world": "MAIN"
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+E",
                "mac": "Alt+Shift+E"
            },
            "description": "Open the extension popup"
        }
    }
}