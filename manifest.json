{
    "manifest_version": 3,
    "name": "Easily Enable Copy and Right-Click",
    "version": "1.0.0",
    "description": "Force enables right click, text selection and copying on any website.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Easily Enable Copy and Right-Click",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.jsx"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}